@model IEnumerable<SummerBootCampTask2.CoreModels.User>

@{ ViewData["Title"] = "Users"; }


<h1>Users</h1>

<div class="form-group">
    <form asp-controller="User" asp-action="Index">
        <input class="form-control mr-sm-2" type="search" name="searchUser" placeholder="Identifier">
        <input type="submit" value="Search" class="btn btn-outline-dark" />
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        <a asp-controller="Chat" asp-action="Index" asp-route-id="@item.Id">Chat</a>
    </td>
</tr>
}
</table>
